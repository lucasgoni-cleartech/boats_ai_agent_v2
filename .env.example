# Environment variables for Conversational Looker Agent

# OpenAI API (for DSPy)
OPENAI_API_KEY=your_openai_api_key_here

# Looker API Configuration (REQUIRED for real API)
LOOKER_BASE_URL=https://your-looker-instance.looker.com:443/api/4.0
LOOKER_CLIENT_ID=your_looker_client_id
LOOKER_CLIENT_SECRET=your_looker_client_secret

# Looker Explore Configuration
LOOKER_MODEL=bg
LOOKER_EXPLORE=consumer_sessions

# Query Settings
LOOKER_DEFAULT_LIMIT=500
LOOKER_QUERY_TIMEZONE=America/New_York

# Development Settings
MOCK_LOOKER_API=false
DEBUG_QUERIES=true

# Logging
LOG_LEVEL=INFO